<div class="overlay"></div>
<div class="intrude-less">
	<header id="header" class="inner">
		<a href="/" class="profilepic">
			<% if (theme.animate){ %>
			<img lazy-src="<%=theme.avatar%>" class="js-avatar">
			<%}else{%>
			<img src="<%=theme.avatar%>" class="js-avatar" style="width: 100%;height: 100%;opacity: 1;">
			<%}%>
		</a>

		<hgroup>
		  <h1 class="header-author"><a href="/"><%=theme.author%></a></h1>
		</hgroup>

		<% if (theme.subtitle){ %>
		<p class="header-subtitle"><%=theme.subtitle%></p>
		<%}%>

		<%if(theme.tagcloud){%>
			<div class="switch-btn">
				<div class="icon">
					<div class="icon-ctn">
						<div class="icon-wrap icon-house" data-idx="0">
							<div class="birdhouse"></div>
							<div class="birdhouse_holes"></div>
						</div>
                        <div class="icon-wrap icon-category hide" data-idx="1">
							<div class="category"></div>
						</div>
						<div class="icon-wrap icon-archive hide" data-idx="2">
							<div class="archive"></div>
							<div class="archive2"></div>
						</div>
						<div class="icon-wrap icon-ribbon hide" data-idx="3">
							<div class="ribbon"></div>
						</div>
						<%if(theme.friends && theme.friends.length != 0){%>
						<div class="icon-wrap icon-link hide" data-idx="4">
							<div class="loopback_l"></div>
							<div class="loopback_r"></div>
						</div>
						<%}%>
						<%if(theme.aboutme){%>
						<div class="icon-wrap icon-me hide" data-idx="5">
							<div class="user"></div>
							<div class="shoulder"></div>
						</div>
						<%}%>
					</div>
				</div>
				<div class="tips-box hide">
					<div class="tips-arrow"></div>
					<ul class="tips-inner">
						<li><%= __('menu.menu') %></li>
						<li><%= __('menu.categories') %></li>
						<li><%= __('menu.archives') %></li>
						<li><%= __('menu.tags') %></li>
						<%if(theme.friends && theme.friends.length != 0){%>
						<li><%= __('menu.link') %></li>
						<%}%>
						<%if(theme.aboutme){%>
						<li><%= __('menu.about') %></li>
						<%}%>
					</ul>
				</div>
			</div>
		<%}%>

		<div class="switch-area">
			<div class="switch-wrap">
				<section class="switch-part switch-part1">
					<nav class="header-menu">
						<ul>
						<% for (var i in theme.menu){ %>
							<li><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
				        <%}%>
						</ul>
					</nav>
					<nav class="header-nav">
						<div class="social">
							<% for (var i in theme.subnav){ %>
								<a class="<%= i %>" target="_blank" href="<%- url_for(theme.subnav[i]) %>" title="<%= i %>"><%= i %></a>
					        <%}%>
						</div>
					</nav>
				</section>
				
				<section class="switch-part switch-part2">
					<div class="widget category" id="js-category">
					    <%- list_categories() %>
					</div>
				</section>
				
				<section class="switch-part switch-part3">
					<div class="widget archive" id="js-archive">
					    <%- list_archives({format: "YYYY年MM月"}) %>
					</div>
				</section>
                
                <%if(theme.tagcloud){%>
				<section class="switch-part switch-part4">
					<div class="widget tagcloud" id="js-tagcloud">
						<%- tagcloud() %>
					</div>
				</section>
				<%}%>
				
				<%if(theme.friends && theme.friends.length != 0){%>
				<section class="switch-part switch-part5">
					<div id="js-friends" class="js-friends">
					<% for (var i in theme.friends){ %>
			          <a target="_blank" class="main-nav-link switch-friends-link" href="<%- url_for(theme.friends[i]) %>"><%= i %></a>
			        <% } %>
			        </div>
				</section>
				<%}%>

				<%if(theme.aboutme){%>
				<%if(!theme.friends || theme.friends.length == 0){%>
				<section class="switch-part switch-part5">
				<%}else{%>
				<section class="switch-part switch-part6">
				<%}%>
					<div id="js-aboutme">
                     <% for (var i in theme.aboutme){ %>
			          <p><%= i %>：<%=theme.aboutme[i]%></p>
			         <% } %>
                    </div>
				</section>
				<%}%>
			</div>
		</div>
	</header>				
</div>
